# QA Testing Configuration
# Переменные окружения для настройки тестирования

# Путь к установке Cellframe Node (по умолчанию /opt/cellframe-node)
export CELLFRAME_NODE_DIR="${CELLFRAME_NODE_DIR:-/opt/cellframe-node}"

# Лимиты ресурсов (можно переопределить для разных окружений)
export QA_MEMORY_LIMIT_MB="${QA_MEMORY_LIMIT_MB:-1024}"
export QA_CPU_LIMIT_PERCENT="${QA_CPU_LIMIT_PERCENT:-50}"

# Timeout'ы для тестов (в секундах)
export QA_COMMAND_TIMEOUT="${QA_COMMAND_TIMEOUT:-30}"
export QA_NETWORK_INIT_TIMEOUT="${QA_NETWORK_INIT_TIMEOUT:-120}"
export QA_CLI_READY_TIMEOUT="${QA_CLI_READY_TIMEOUT:-30}"

# Режим тестирования
export QA_STRICT_MODE="${QA_STRICT_MODE:-true}"
export QA_VERBOSE_LOGGING="${QA_VERBOSE_LOGGING:-false}"

# TestOps интеграция
export ALLURE_ENDPOINT="${ALLURE_ENDPOINT:-http://178.49.151.230:8080}"
export ALLURE_TOKEN="${ALLURE_TOKEN:-c9d45bd4-394a-4e6c-aab2-f7bce2b5be44}"
export ALLURE_PROJECT_ID="${ALLURE_PROJECT_ID:-1}"
