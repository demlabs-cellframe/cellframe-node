# Allure TestOps Configuration for Cellframe Node QA
# Этот файл содержит переменные окружения для allurectl

# TestOps Endpoint (замените на ваш реальный endpoint)
export ALLURE_ENDPOINT=https://testops.example.com

# API Token (получите в меню пользователя TestOps)
export ALLURE_TOKEN=your-api-token-here

# Project ID (создайте проект в TestOps)
export ALLURE_PROJECT_ID=cellframe-node-qa

# Launch Name (будет генерироваться автоматически)
export ALLURE_LAUNCH_NAME="Cellframe Node QA - $(date +%Y-%m-%d_%H-%M)"

# Launch Tags
export ALLURE_LAUNCH_TAGS="cellframe,node,qa,automated,blockchain"

# Launch Description
export ALLURE_LAUNCH_DESCRIPTION="Automated QA testing for Cellframe Node blockchain platform"

# Environment (опционально)
export ALLURE_ENVIRONMENT="docker-testing"

# Build Name (опционально)
export ALLURE_BUILD_NAME="cellframe-node-qa-$(date +%Y%m%d-%H%M%S)"




