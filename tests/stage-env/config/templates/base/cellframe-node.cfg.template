# General section
[general]
# General debug mode
debug_mode=false
# Debug stream packets
debug_dump_stream_headers=false
# Debug I/O reactor, false by default
#debug_reactor=false
# Debug HTTP protocol, false by default
#debug_http=false
# debug-config=false

# seed mode. WARNING. Used true only when you start the new network
seed_mode=false

# Auto bring up links and sync everything over them
auto_online=true

# Server part
[server]
#   By default you don't need to open you to the world
# Enabled for stagenet testing and health checks
enabled=true
news_url_enabled=false
bugreport_url_enabled=false
# Standard Cellframe port 8079 for all communications
# Listen on all interfaces (0.0.0.0) to accept connections from other Docker containers
listen-address=[0.0.0.0:8079]
# External port for node registration in Global DB (required for announce)
ext_port=8079
# External IPv4 address (node IP in Docker network)
ext_address=NODE_IP_PLACEHOLDER

# External IPv6 address
#ext_address6=aaaa:bbbb:deee:96ff:feee:3fff
#exec_cmd=[]


[notify_server]
# Notify server is internal only, no external listen needed
# listen_path=[listen/path1,listen/path2,...]
# listen_address=[listen_address1:port1,port2,listen_address2:port3,...]
#listen_address=[127.0.0.1:8080]

